{
  "name": "phononwebsite",
  "version": "0.2.0",
  "description": "Javascript web app to visualise lattice vibrations",
  "main": "build/phononwebsite.js",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "dependencies": {
    "assert": "^1.4.1"
  },
  "devDependencies": {
    "chai": "^5.2.0",
    "mocha": "^11.5.0",
    "rollup": "^2.79.0"
  },
  "scripts": {
    "test": "mocha",
    "copy": "cp -r figures css libs contribdb localdb mpdb README.md index.html src/main.js phonon.html build/",
    "build": "rollup -c",
    "build-uglify": "rollup -c && uglifyjs build/phononwebsite.js -cm > build/phononwebsite.min.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/henriquemiranda/phononwebsite.git"
  },
  "keywords": [
    "phonons",
    "visualization",
    "lattice",
    "vibrations",
    "webgl",
    "javascript",
    "threejs",
    "javascript"
  ],
  "author": "Henrique Miranda",
